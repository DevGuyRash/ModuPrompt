{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "schema_version", "payload"],
  "properties": {
    "request_id": { "type": ["string", "null"] },
    "type": { "type": "string" },
    "schema_version": { "type": "integer" },
    "payload": {
      "oneOf": [
        { "type": "object" },
        { "type": "array" }
      ]
    }
  }
}
